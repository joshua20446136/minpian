.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
  background-color: #efefef;
}

.card-top {
  width: 89%;
  min-height: 160px;
  padding: 4%;
  padding-top: 6%;
  background-color: black;
  border-radius: 4px;
  position: relative;
  color: #fff;
}
.name {
  word-break: break-all;
  max-width: 560px;
  font-size: 55rpx;
  position: absolute;
  top: 28rpx;
  left: 120rpx;
  display: block;
  font-weight: bold;
  margin-left: 10rpx;
}

.type {
  margin-top: 2px;
  font-size: 13px;
  color: #ccc;
  display: flex;
  flex-direction: row;
}

.type view {
  padding-left: 4px;
  color:azure;
}
.position { 
  font-size: 26rpx;
  color: azure;
}
.images {
  border-radius: 10rpx;
  width: 80rpx;
  height: 80rpx;
}

.phone {
  margin-left:5px;
  display:inline;
  font-size:17px;
  color:#2EBAEE;
  font-weight:bold;
}
.nickname {
  margin-left:5px;
  display:inline;
  font-size:13px;
  color:black;
}
.email {
  margin-left:5px;
  display:inline;
  font-size:13px;
  color:black;
}
